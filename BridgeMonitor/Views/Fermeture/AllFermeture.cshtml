@model List<Boats>

@{
    ViewData["Title"] = "Toutes les Fermeture";
}

@{
        var ListOfClosing = Model.OrderBy(closing => Convert.ToDateTime(closing.ClosingDate)).ToList();
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nom du bateau</th>
                    <th scope="col">Type de fermeture</th>
                    <th scope="col">Date de fermeture</th>
                    <th scope="col">Date de réouverture</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var boat in ListOfClosing)
                {
                    <tr>
                        <td>@boat.BoatName</td>
                        <td>@boat.ClosingType</td>
                        <td>@boat.ClosingDate</td>
                        <td>@boat.ReopeningDate</td>
                    </tr>
                }

            </tbody>
        </table>
    }
